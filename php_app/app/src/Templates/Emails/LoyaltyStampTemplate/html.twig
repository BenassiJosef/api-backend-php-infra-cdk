{% extends 'Emails/GiftingTemplate/giftBase.twig' %}
{% block content %}
	<table width="100%" border="0" cellspacing="0" cellpadding="0" align="center" data-module="2Columns 2Rows">
		<tr>
			<td width="100%">
				<table bgcolor="#FFFFFF" align="center" border="0" cellspacing="0" cellpadding="0" width="560">
					<tr>
						<td align="center">
							<img width="150px" style="display: block;" src="{{ image }}"/>
						</td>
					</tr>

					<tr>
						<td height="15"></td>
					</tr>

					<tr>
						<td class="fs-38 xbold" style="color: {{ colour }};" align="center">
							Card Stamped!
						</td>
					</tr>

					<tr>
						<td height="13"></td>
					</tr>
					<tr>
						<td class="fs-18 black" align="center">
							You've just stamped your loyalty card
						</td>
					</tr>

					<tr>
						<td class="fs-18 black" align="center" style="padding-top: 20px">
							{{ currentCard.remainingStamps }}
							stamps to unlock
							{{ reward.name }}
						</td>
					</tr>


					<tr>
						<td height="40"></td>
					</tr>

					<tr>
						<td align="center">

							<table width="280" align="center" class="loyalty-box" style="background-color: {{design.backgroundColour}};">
								<tr>
									<td align="center">
										<img alt="Loyalty stamp card logo" width="auto" height="100px" style="display: block;  padding-top: 20px" border="0" src="{{ design.icon }}"/>

									</td>
								</tr>
								<tr>
									<td align="center" style="padding: 15px  40px;" height="100%">
										<table width="100%" cellpadding="0" cellspacing="0">
											<tr>
												<td>
													<div class="stamps-row">
														{% for i in 1..currentCard.collectedStamps + currentCard.remainingStamps %}
															<div class="stamp">
																{% if i <= currentCard.collectedStamps %}
																	<img alt="stamp tag"  height="40px" width="40px"  style="background-color: {{design.labelColour | default('transparent')}};" src="{{design.labelIcon | default('https://assets.stampede.ai/loyalty/stamp-pink.png')}}"/>
																{% else %}
																	<img alt="stamp tag" height="40px" width="40px" src="https://assets.stampede.ai/loyalty/stamp-empty.png"/>
																{% endif %}
															</div> 
														{% endfor %}
													</div>
												</td>
											</tr>
										</table>


									</td>
								</tr>
							</table>
						</td>
					</tr>

					<tr>
						<td align="center" style="padding-top: 20px">
							<a class="bx-button clear-link" href="https://stampede.ai/loyalty/schemes/{{currentCard.schemeId}}">View Card In App</a>
						</td>
					</tr>


				</table>
			</td>
		</tr>
	</table>
{% endblock %}
