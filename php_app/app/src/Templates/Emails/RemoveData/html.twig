                    <td bgcolor="#4c443e" data-bgcolor="Banner" style="background-color: rgb(255, 255, 255);">
                        <table width="560" border="0" cellspacing="0" cellpadding="0" align="center" class="scale">
                            <tr>
                                <td height="60">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <table width="245" border="0" cellspacing="0" cellpadding="0" align="left" class="scale">
                                        <tr>
                                            <td class="scale-center-both-bottom">
                                                <img width="150" src="https://cdn2.hubspot.net/hubfs/2735287/Error/block_img@2x.png" style="display: block; margin: 0 auto;" border="0" class="" alt="">
