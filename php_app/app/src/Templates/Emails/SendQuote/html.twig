                                                    <br><br>
                                                    <strong>Sender description:</strong> {{ quoteDesc }}
                                                </td>
                                            </tr>
                                            <tr>
                                                <td height="18">
                                                </td>
                                            </tr>

                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td height="90">
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>

